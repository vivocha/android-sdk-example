<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baloonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="8dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >
    
    <com.vivocha.sdk.internal.RoundedNetworkImageView
        android:id="@+id/avatarView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="3dp"
        android:background="@android:color/transparent"
        android:contentDescription=""
        />
    
     <TextView
        android:id="@+id/defaultAvatarView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/avatarView"
        android:background="@android:color/transparent"
        android:text=""
        android:layout_marginRight="4dp"
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:minHeight="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <TextView
        android:id="@+id/baloonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/defaultAvatarView"
        android:background="@android:color/transparent"
        android:text=""
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:maxWidth="250dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout> <!-- android:background="#00ff00" -->


